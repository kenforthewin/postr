= simple_form_for @yak, defaults: { input_html: {class: 'form-control'} } do |f|
  .row
    .col-md-8.col-md-offset-2
      .panel.panel-default
        .panel-body
          .form-inputs
            .col-md-12
              = f.input :body, as: :text, label: false
          .form-actions
            .row
              .col-md-1
                %br
                = f.submit 'Submit'

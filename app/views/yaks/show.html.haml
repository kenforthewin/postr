.container
  .row
    .col-md-8.col-md-offset-1
      .panel.panel-default
        .panel-body
          .row
            .col-md-12  
              %h1
                = @yak.body
              %hr
          %h3 Comments:
          = simple_form_for @comment, defaults: { input_html: {class: 'form-control'} } do |f|
            =f.error_notification
            .form-inputs
              .col-md-12
                = f.input :body, as: :text, label: false
            = f.hidden_field :yak_id, value: @yak.id
            .form-inputs
              .col-md-2.col-md-offset-10
                %br
                = f.submit 'Submit'
          - @yak.comments.order('created_at DESC').each do |comment|
            .row
              .col-md-12
                %h4
                  =comment.body
                %hr